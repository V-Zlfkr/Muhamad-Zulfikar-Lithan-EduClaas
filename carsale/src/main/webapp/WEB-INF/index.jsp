        <div class="social-media">
            <i class="fa-brands fa-facebook-square fa-2xl" id="icon-1"></i>
            <i class="fa-brands fa-instagram-square fa-2xl" id="icon-2"></i>
            <i class="fa-brands fa-youtube-square fa-2xl" id="icon-3"></i>
        </div>
